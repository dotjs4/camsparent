<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="#ddd"
    tools:context="net.sajak.android.camera2basic.ImageEditor">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/imageOne"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:adjustViewBounds="false"
            android:background="@drawable/imageview"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/imageTwo"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/imageview"
            android:scaleType="matrix" />
    </RelativeLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:id="@+id/verticalLayout"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:weightSum="2"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:id="@+id/imageThree"
            android:adjustViewBounds="false"
            android:background="@drawable/imageview"
            android:scaleType="matrix"
            />

        <ImageView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:id="@+id/imageFour"
            android:adjustViewBounds="false"
            android:background="@drawable/imageview"
            android:scaleType="matrix"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/toggleCropOrientation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="toggle"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/mergedImage"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="100dp"
                android:id="@+id/goBack"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#666"
                android:textColor="#fff"
                android:text="BACK"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="100dp"
                android:id="@+id/setChangesBack"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#fff"
                android:textColor="#000"
                android:text="RESET"/>

            <Button
                android:id="@+id/saveMergedImage"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/menuColor"
                android:text="SAVE"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
